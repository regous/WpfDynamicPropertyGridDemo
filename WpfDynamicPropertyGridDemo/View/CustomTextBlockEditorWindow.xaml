<Window x:Class="WpfDynamicPropertyGridDemo.CustomTextBlockEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDynamicPropertyGridDemo"
        mc:Ignorable="d"
        x:Name="wndWindow"
        Title="CustomTextBlockEditorWindow" Width="100" SizeToContent="Height">
    <Grid>
        <TextBox Text="{Binding Text,ElementName=wndWindow}"></TextBox>
    </Grid>
</Window>
